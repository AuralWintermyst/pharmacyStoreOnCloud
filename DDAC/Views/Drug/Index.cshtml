@model IEnumerable<DDAC.Models.Drugs>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Drugs</h2>

<p>
    <a asp-action="AddDrug">Create New</a>
</p>
<p>
    <a asp-action="CreateBlobContainer">Create New Blob</a>
</p>
@*<p>
    <a asp-action="Upload">Upload attachment</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Id)*@ 
                ID
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.drugname)*@
                Drug Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.description)*@
                Description
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.price)*@
                Price
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.imageURL)*@
                Image
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.stock)*@
                Stock
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.drugname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <img src="@item.imageURL" width="100" height="100">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteDrug", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
