@model IEnumerable<DDAC.Models.Drugs>

@{
    ViewData["Title"] = "Drug List";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<h2>Drug List</h2>
@if (ViewBag.message != null)
{
    <p class="alert alert-danger" id="errorMessage">@ViewBag.message</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Id)*@
                ID
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.drugname)*@
                Drug Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.description)*@
                Description
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.price)*@
                Price
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.imageURL)*@
                Image
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.stock)*@
                Stock
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.drugname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    <img src="@item.imageURL" width="100" height="100">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stock)
                </td>
                <td>
                    @Html.ActionLink("Order", "BuyItem", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
